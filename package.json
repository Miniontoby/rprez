{
  "name": "RPrez",
  "version": "1.0.0",
  "description": "Markdown based presentation software",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "prebuild": "tslint 'src/**/*.ts'",
    "build": "tsc",
    "postbuild": "glopy renderer"
  },
  "config": {
    "glopy": {
      "renderer": [
        "./src",
        "./dist",
        [
          "**/*.css",
          "**/*.html",
          "**/*.js"
        ]
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nebrius/rprez.git"
  },
  "author": "Bryan Hughes <bryan@nebri.us>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nebrius/rprez/issues"
  },
  "homepage": "https://github.com/nebrius/rprez#readme",
  "devDependencies": {
    "@types/node": "^12.6.9",
    "@types/ws": "^6.0.1",
    "glopy": "0.0.3",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "electron": "^6.0.0",
    "express": "^4.17.1",
    "jsonschema": "^1.2.4",
    "ws": "^7.1.1"
  }
}
